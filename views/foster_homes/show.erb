<div class="row">
  <div class="column">
    <div id="curve_chart" style="width: 900px; height: 500px"></div>
  </div>
</div>

<div class="row">
  <div class="column">
    <% @reviews.each do |review| %>
      <div class="row">
        <hr/>
        <div class="small-12 columns">
          <strong>Reviewer: <%= review["name"] %> Rating: <%= review["rating"] %> Date: <%= review["review_date"] %></strong>
          <p><%= review["review"] %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
